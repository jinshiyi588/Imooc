.container
	.row
		.page-header.clearfix
			h1= title 
			.col-md-4
				small jinshiyi
			.col-md-8
				form(method='GET', action='/result')
					.input-group.pull-right.col-sm-4
						input#inputSearch.form-control(type="text", name="q")
						span.input-group-btn
							button.btn.btn-default(type="submit") Search
.navbar.navbar-default.navbar-fixed-bottom
	.container-fluid
		.navbar-header
			a.navbar-brand(href="/") Imooc
		ul.nav.navbar-nav.navbar-right
			if user
				li
					p.navbar-text Welcome, &nbsp; 
						mark #{user.name}
				li
					a.navbar-link(href="/admin/logout") 
						span.glyphicon.glyphicon-log-out &nbsp;Logout
			else
				li
					a(href="#" data-toggle="modal" data-target="#signup")
						span.glyphicon.glyphicon-user &nbsp;Signup
				li
					a(hre="#" data-toggle="modal" data-target="#signin")
						span.glyphicon.glyphicon-log-in &nbsp;Login


#signup.modal.fade
	.modal-dialog
		.modal-content
			.modal-header Signup
				button(type="button", class="close", data-dismiss="modal") &times;
			form(method="post", action="/admin/signup")
				.modal-body
					.form-group
						label.control-label(for="inputName") Name
						input#inputName.form-control(type="text", name="user[name]")
					.form-group
						label.control-label(for="inputPassword") Password
						input#inputPassword.form-control(type="text", name="user[password]")
				.modal-footer
					.form-group
						.col-sm-offset-2.col-sm-10
							button.btn.btn-defalut(type="submit") submit
#signin.modal.fade
	.modal-dialog
		.modal-content
			.modal-header Login
				button(type="button", class="close", data-dismiss="modal") &times;
			form(method="post", action="/admin/login")
				.modal-body
					.form-group
						label.control-label(for="inputName") Name
						input#inputName.form-control(type="text", name="user[name]")
					.form-group
						label.control-label(for="inputPassword") Password
						input#inputPassword.form-control(type="text", name="user[password]")
				.modal-footer
					.form-group
						.col-sm-offset-2.col-sm-10
							button.btn.btn-defalut(type="submit") submit
