extends ../layout

block content
	.container
		.row
			.col-md-8
				
				iframe(width="854",height="480",src="#{movie.flash}",frameborder="0",allowfullscreen)
			.col-md-4
				dl.dl-horizontal
					dt Name
					dd=movie.title
					dt Director
					dd=movie.director
					dt Country
					dd=movie.country
					dt Language
					dd=movie.language
					dt Summary
					dd=movie.summary
					
