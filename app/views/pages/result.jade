extends ../layout

block content
	.container
		.row
			.panel.panel-default 
				.panel-heading 
					h3 #{keyword}
				.panel-body
					if(movies)
						each item in movies
							.col-md-3
								.thumbnail
									a(href="/movie/#{item._id}")
										img(src="#{item.poster}", alt="#{item.title}")
									.caption
										h3 #{item.title}
										p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") Watch Movie
			ul.pagination
				- for(var i=0; i< totalPage; ++i){
					- if(currentPage == (i+1)){
						li.active 
							span #{i+1}
					- }else{
						li 
							a(href="/result?p=#{i}&#{query}") #{i+1}
					-}

				- }
	br
	br
	br
